color-blue = #2196f3
color-grey-lighten1 = #bdbdbd
color-grey-lighten3 = #eeeeee
color-grey-darken1 = #757575
color-grey-darken2 = #616161


/* function helpers */

shadow($z-depth=1)
  if($z-depth==1)
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.24), 0 1px 6px rgba(0, 0, 0, 0.12)
  else if($z-depth==2)
    box-shadow 0 3px 10px rgba(0, 0, 0, 0.16), 0 3px 10px rgba(0, 0, 0, 0.23)
  else if($z-depth==3)
    box-shadow 0 10px 30px rgba(0, 0, 0, 0.19), 0 6px 10px rgba(0, 0, 0, 0.23)

font($size = 13px, $weight = normal, $color = $c-black, $height = 13px)
  font-size $size
  font-weight $weight
  color $color
  line-height $height

mdi($name)
  char(nth($hexes, index($names, $name)))
